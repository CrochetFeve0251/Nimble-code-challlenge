<h2>Sign up</h2>

<%= form_for(resource, as: resource_name, url: eval("#{resource_name}_registration_path")) do |f| %>

 <%= devise_error_messages! %>
 <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :firstname %><br>
    <%= f.text_field :firstname %>
  </div>
  <div class="field">
    <%= f.label :lastname %><br>
    <%= f.text_field :lastname %>
  </div>
  <div class="field">
    <%= f.label :login %><br>
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :citizen_id %><br>
    <%= f.number_field :citizen_id %>
  </div>
  <% if resource.is_a? Student %>
    <div class="field">
      <%= f.label :student_number %><br>
      <%= f.number_field :student_number %>
    </div>
  <% end %>
  <% if resource.is_a? Instructor %>
    <div class="field">
      <%= f.label :departement_name %><br>
      <%= f.text_field :departement_name %>
    </div>
    <div class="field">
      <%= f.label :instructor_number %><br>
      <%= f.number_field :instructor_number %>
    </div>
  <% end %>
  
  <div class="actions">
    <%= f.submit %>
  </div>  
<% end %>

<%= render "devise/shared/links" %>
